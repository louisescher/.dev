---
import Icon from "./Icon.astro";
---

<a href="/rss.xml" class="rss-hint">
	<Icon type="lucide" name="rss" width={24} height={24} class={"rss-icon"} />
	<span>Subscribe to RSS Feed</span> 
</a>
<style>
	.rss-hint {
		width: fit-content;
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: .5rem;
		margin-top: 1rem;
		border: 1px solid #353535;
		padding: .5rem;
		background-color .15s ease, border .15s ease
	}

	.rss-hint:hover {
		border: 1px solid var(--primary);
		background-color: rgba(var(--primary-rgb), .125);
		text-decoration: none;
		color: white;
	}

	.rss-icon {
		transform: scale(.85);
	}
</style>
---
import Icon from "./Icon.astro";

interface Props {
	card?: boolean;
}

const { card } = Astro.props;
---

<a href="/rss.xml" class="rss-hint" class:list={{ card }} data-rybbit-event="rss_feed_click">
	<Icon type="lucide" name="rss" width={24} height={24} class={"rss-icon"} />
	<span>Subscribe to RSS Feed</span> 
</a>
<style>
	.rss-hint {
		width: fit-content;
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: .5rem;
		border: 1px solid #353535;
		padding: .5rem;
		transition: .15s ease, border .15s ease;
	}

	.rss-hint:hover {
		border: 1px solid var(--primary);
		text-decoration: none;
		color: white;
	}

	.rss-hint.card {
		width: 100%;
    background-color: #121212;
    padding: 1.5rem;
		margin-top: 1rem;
	}

	.rss-hint.card:hover {
		width: 100%;
		background-color: #121212;
		padding: 1.5rem;
	}

	.rss-icon {
		transform: scale(.85);
	}
</style>